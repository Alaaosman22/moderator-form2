  <div class="form-container">
    <h2>نموذج تسجيل الطلب</h2>
    <form id="orderForm">
      <label>اسم العميل</label>
      <input type="text" name="customer_name" required />

      <label>رقم التليفون</label>
      <input type="tel" name="phone" required />

      <label>العنوان</label>
      <textarea name="address" rows="3" required></textarea>

      <label>المحافظة</label>
      <input type="text" name="governorate" required />

      <label>اسم المنتج</label>
      <input type="text" name="product" required />

      <label>كود المودريتور</label>
      <input type="text" name="moderator_code" required placeholder="مثال: MOD01" />

      <button type="submit">تسجيل الطلب</button>
    </form>
    <p id="msg"></p>
  </div>

  <div class="summary" id="summarySection">
    <h3>إجمالي الطلبات حسب كل مودريتور</h3>
    <table>
      <thead>
        <tr>
          <th>كود المودريتور</th>
          <th>عدد الطلبات</th>
        </tr>
      </thead>
      <tbody id="summaryBody">
        <tr><td>MOD01</td><td id="MOD01-count">0</td></tr>
        <tr><td>MOD02</td><td id="MOD02-count">0</td></tr>
        <tr><td>MOD03</td><td id="MOD03-count">0</td></tr>
        <tr><td>MOD04</td><td id="MOD04-count">0</td></tr>
        <tr><td>MOD05</td><td id="MOD05-count">0</td></tr>
        <tr><td>MOD06</td><td id="MOD06-count">0</td></tr>
      </tbody>
    </table>
    <a class="download-btn" href="https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/export?format=xlsx" target="_blank">تحميل تقرير الطلبات (Excel)</a>
  </div>

  <script>
    const scriptURL = 'https://script.google.com/macros/s/AKfycbzMJw1ZH1jjcL4prmmLPU-H8WK4YFpAaE489duPI44hdahbsUgzZf-826Md1efAy6YAwg/exec';
    const form = document.getElementById('orderForm');
    const msg = document.getElementById('msg');
    const summarySection = document.getElementById('summarySection');

    const counts = {
      MOD01: 0,
      MOD02: 0,
      MOD03: 0,
      MOD04: 0,
      MOD05: 0,
      MOD06: 0,
    };

    form.addEventListener('submit', e => {
      e.preventDefault();
      const data = new FormData(form);
      const moderator = data.get('moderator_code');
      if (counts.hasOwnProperty(moderator)) {
        counts[moderator]++;
        document.getElementById(`${moderator}-count`).innerText = counts[moderator];
      }

      fetch(scriptURL, { method: 'POST', body: data })
        .then(response => msg.innerText = "تم تسجيل الطلب بنجاح")
        .catch(error => msg.innerText = "حدث خطأ، حاول مرة أخرى");

      form.reset();
    });

    // لإظهار القسم المخفي لو انت الأدمن
    if (window.location.href.includes("admin")) {
      summarySection.style.display = 'block';
    }
  </script>
